<%- include ('partials/header') %> 
<body>
    <%- include ('partials/navbar') %> 
    <div class="container">
        <hr>
        <h1><%- pergunta.titulo %> </h1>
        <p><%- pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label for="">Resposta:</label>
            <textarea class="form-control" name="corpo" placeholder="Digite sua resposta"></textarea>
            <button class="btn btn-primary mt-3" type="submit">Responder</button>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <p><%= resposta.corpo %> </p>
                </div>
            </div>
        <% }) %> 
    </div>
</body>
<%- include ('partials/footer') %> 
</html>